# =============================================================================
# Resonancial Frontend - Environment Variables
# =============================================================================
# Copy this file to .env.local for local development

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# Backend API URL - where the Express server is running
#
# Local development (full-stack):
#   VITE_API_URL=http://localhost:5000
#
# Local development (frontend-only, using staging backend):
#   VITE_API_URL=https://resonancial-api-staging.up.railway.app
#
# Replit development:
#   VITE_API_URL=https://resonancial-api-staging.up.railway.app
#
# Production (set in Vercel dashboard):
#   VITE_API_URL=https://api.resonancial.com
#
# Leave empty to use same origin (when frontend and backend are deployed together)
VITE_API_URL=http://localhost:5000
