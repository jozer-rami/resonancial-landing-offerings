# =============================================================================
# Resonancial - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values

# -----------------------------------------------------------------------------
# Database (Required)
# -----------------------------------------------------------------------------
# PostgreSQL connection string (Supabase, Neon, Railway, etc.)
DATABASE_URL=postgresql://user:password@host:5432/database

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
# Server port (default: 5000)
PORT=5000

# Environment mode (development | production)
NODE_ENV=development

# -----------------------------------------------------------------------------
# CORS Configuration (Production only)
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins for CORS
# Example: https://resonancial.vercel.app,https://resonancial.com
CORS_ORIGINS=

# -----------------------------------------------------------------------------
# Database Pool Configuration (Optional)
# -----------------------------------------------------------------------------
# Connection pool size (default: 10 for persistent, 1 for serverless)
DB_POOL_SIZE=10

# Idle connection timeout in milliseconds (default: 30000)
DB_IDLE_TIMEOUT=30000

# Connection timeout in milliseconds (default: 10000)
DB_CONNECTION_TIMEOUT=10000
