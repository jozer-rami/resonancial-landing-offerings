# =============================================================================
# Resonancial - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values

# -----------------------------------------------------------------------------
# Database (Required)
# -----------------------------------------------------------------------------
# PostgreSQL connection string (Supabase, Neon, Railway, etc.)
DATABASE_URL=postgresql://user:password@host:5432/database

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
# Server port (default: 5000)
PORT=5000

# Environment mode (development | production)
NODE_ENV=development

# -----------------------------------------------------------------------------
# CORS Configuration (Production only)
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins for CORS
# Example: https://resonancial.vercel.app,https://resonancial.com
CORS_ORIGINS=

# -----------------------------------------------------------------------------
# Database Pool Configuration (Optional)
# -----------------------------------------------------------------------------
# Connection pool size (default: 10 for persistent, 1 for serverless)
DB_POOL_SIZE=10

# Idle connection timeout in milliseconds (default: 30000)
DB_IDLE_TIMEOUT=30000

# Connection timeout in milliseconds (default: 10000)
DB_CONNECTION_TIMEOUT=10000

# -----------------------------------------------------------------------------
# WhatsApp Service (WaSender)
# -----------------------------------------------------------------------------
# API key from WaSender dashboard
# Required for sending discount codes via WhatsApp
WASENDER_API_KEY=your_wasender_api_key

# -----------------------------------------------------------------------------
# Email Service (Resend)
# -----------------------------------------------------------------------------
# API key from Resend dashboard (https://resend.com)
# Required for sending discount codes via Email
RESEND_API_KEY=re_xxxxx

# Sender email address (must be verified in Resend)
# Default: noreply@terapiaresonancial.com
RESEND_FROM_EMAIL=noreply@terapiaresonancial.com

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log level: error | warn | info | debug | trace
# Default: 'info' in production, 'debug' in development
LOG_LEVEL=debug

# Log format: json | pretty
# Default: 'json' in production, 'pretty' in development
# Use 'json' for log aggregation services (Datadog, Logtail, etc.)
LOG_FORMAT=pretty

# Log sensitive data (emails, phones, tokens) - DANGEROUS!
# Default: false (always false in production)
# Only enable for debugging specific issues
LOG_SENSITIVE_DATA=false

# -----------------------------------------------------------------------------
# BNB API Configuration (Payments)
# -----------------------------------------------------------------------------
# Account ID from BNB Open Banking portal
BNB_ACCOUNT_ID=your_bnb_account_id

# Authorization ID from BNB Open Banking portal
BNB_AUTHORIZATION_ID=your_bnb_authorization_id

# API Base URL (optional - auto-detected based on sandbox mode)
# Production: https://api.bnb.com.bo
# Sandbox: https://sandbox-api.bnb.com.bo
BNB_API_BASE_URL=

# Enable sandbox mode for testing (true | false)
# Default: false
BNB_API_SANDBOX=true
